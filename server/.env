DATABASE_URL=postgresql://participium_user:participium_password@localhost:5432/participium_db
DB_USER=user
DB_PASSWORD=password
DB_HOST=localhost
DB_NAME=participium_db
PORT=3001
NODE_ENV=development

# Storage Configuration
# STORAGE_PROVIDER options: 'local' (default) or 'r2'
STORAGE_PROVIDER=local

# Cloudflare R2 Configuration (only needed when STORAGE_PROVIDER=r2)
# Get these from: https://dash.cloudflare.com/ -> R2 -> Manage R2 API Tokens
# R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
# R2_ACCESS_KEY_ID=your-access-key-id
# R2_SECRET_ACCESS_KEY=your-secret-access-key
# R2_BUCKET_NAME=participium-reports
# R2_PUBLIC_URL=https://your-public-domain.com (optional, for CDN)